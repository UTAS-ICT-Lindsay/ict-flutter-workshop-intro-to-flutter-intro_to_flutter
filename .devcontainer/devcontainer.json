{
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "no-auth": true
    }
  },
  "forwardPorts": [6080],
  "postStartCommand": "(sleep 5 && code WORKSHOP.md) &",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "dart.flutterHotReloadOnSave": "all",
        "workbench.colorTheme": "Default Dark+"
      }
    }
  }
}
