{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "no-auth": true
    }
  },
  "forwardPorts": [6080],
 // "postCreateCommand": "sudo flutter config --no-analytics && sudo flutter config --enable-web && sudo flutter precache --web",
  "postStartCommand": "(sleep 5 && code WORKSHOP.md) &",
  "postAttachCommand": "(sleep 5 && code WORKSHOP.md) &",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "dart.flutterHotReloadOnSave": "all"
      }
    }
  }
}